<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <ListPreference
        android:key="@string/choice_count_key"
        android:defaultValue="@string/default_choice_count"
        android:summary="%s"
        android:entries="@array/pref_choice_count_title"
        android:entryValues="@array/pref_choice_count_value"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_choice_count" />

    <ListPreference
        android:key="@string/wait_time_key"
        android:defaultValue="@string/default_wait_time"
        android:summary="%s"
        android:entries="@array/pref_wait_time_title"
        android:entryValues="@array/pref_wait_time_value"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_wait_time" />

    <Preference
        android:key="manage_dictionaries"
        android:title="Manage Dictionaries">
        <intent android:action="com.koli.openquiz.action.OPEN_DICTIONARY_MANAGER" />
    </Preference>
</PreferenceScreen>
